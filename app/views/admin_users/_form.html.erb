<%= simple_form_for @user, remote: true, url: admin_users_path do |f| %>
  <%= f.input :email, placeholder: 'Email', label: false %>
  <%= f.input :admin, :as => :hidden, :input_html => { :value => 'N' }%>
  <%= f.input :password, :as => :hidden, :input_html => { :value => @pwd }%>
  <%= f.input :password_confirmation, :as => :hidden, :input_html => { :value => @pwd }%>
  <%= f.input :groups, as: :select, collection: Group.where(user: current_user), prompt: "Choisir un groupe", label: false %>
  <%= f.input :role, as: :select, collection: {"Choisir un role": nil, "Membre": "M", "Référent": "R"}, selected: 1, prompt: 'Choisir un role', label: false %>
  <%= f.submit "Envoyer l'invitation", class: 'twi-btn lblue-btn' %>
<% end %>
