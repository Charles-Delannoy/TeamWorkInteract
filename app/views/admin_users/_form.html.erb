<%= simple_form_for :user, url: admin_users_path do |f| %>
  <%= f.input :email %>
  <%= f.input :user_type %>
  <%= f.input :password, :as => :hidden, :input_html => { :value => @pwd }%>
  <%= f.input :groups, as: :select, collection: Group.where(user: current_user), selected: 1, label: 'Groupe' %>
  <%= f.button :submit %>
<% end %>
