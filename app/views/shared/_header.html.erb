<div id="header">
  <%= link_to '<i class="fas fa-home"></i>'.html_safe, root_path, class: "home-logo" %>
  <%= image_tag 'logo.png', class: 'twi-logo' %>
  <h1>- TeamWorkInteract</h1>
  <% if current_user %>
  <div class="profile-pic">
    <%= link_to edit_user_registration_path do %>
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, alt: "profile pic"%>
      <% else %>
        <%= image_tag 'profile.svg', alt: "profile pic" %>
      <% end %>
    <% end %>
  </div>
  <% end %>
</div>
